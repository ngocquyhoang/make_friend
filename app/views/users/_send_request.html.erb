<%= form_for(current_user.active_relationships.build, remote: true, authenticity_token: true) do |f| %>
  <%= hidden_field_tag :receive_user_id, user_target.id %>
  
  <a href="#" data-toggle="modal" data-target="#makeFriendModal" class="btn btn-primary make-friend-btn no-outline">
    Send friend request
  </a>
  <div class="modal fade" id="makeFriendModal" tabindex="-1" role="dialog" aria-labelledby="makeFriendModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="makeFriendModalLabel">Are you sure ?</h5>
          <button type="button" class="close cursor-pointer no-outline" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Send friend request to <%= stick_avatar_for user_target %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary cursor-pointer no-outline" data-dismiss="modal">No</button>
          <button type="submit" class="btn btn-primary cursor-pointer no-outline">Yes</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
