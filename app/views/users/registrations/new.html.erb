<div class="user-screen">
  <div id="parallaxBackground" class="mouse-parallax-bg"></div>
  <div class="user-content">
    <div class="container">
      <div class="row height-100vh align-items-center">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-8 col-sm-10 col-xs-12">
              <div class="user-main-block">
                <div class="user-header table-panel">
                  <div class="table-child ver-mid">
                    <%= link_to "<", root_path, class: "back-to-home-button", title: "Go Home" %>
                  </div>
                  <div class="table-child">
                    <h1 class="main-text-logo text-center header-font">Sign up</h1>
                  </div>
                </div>
                
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user-registration-form"}) do |f| %>
                  <div class="form-group js--email-field">
                    <% if resource.errors.empty? %>
                      <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', placeholder: "Email" %>
                      <div class="invalid-feedback"></div>
                    <% else %>
                      <% if resource.errors.messages[:email].empty? %>
                        <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg is-valid', placeholder: "Email" %>
                        <div class="invalid-feedback"></div>
                      <% else %>
                        <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg is-invalid', placeholder: "Email" %>
                        <div class="invalid-feedback">
                          <%= "Email " + resource.errors.messages[:email][0] %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="form-group js--password-field">
                    <% if resource.errors.empty? %>
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg', placeholder: "Password" %>
                      <div class="invalid-feedback"></div>
                    <% else %>
                      <% if resource.errors.messages[:password].empty? %>
                        <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg is-valid', placeholder: "Password" %>
                        <div class="invalid-feedback"></div>
                      <% else %>
                        <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg is-invalid', placeholder: "Password" %>
                        <div class="invalid-feedback">
                          <%= "Password " + resource.errors.messages[:password][0] %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="form-group js--password-confirmation-field">
                    <% if resource.errors.empty? %>
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg', placeholder: "Password confirmation" %>
                      <div class="invalid-feedback"></div>
                    <% else %>
                      <% if resource.errors.messages[:password_confirmation].empty? && resource.errors.messages[:password].empty? %>
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg is-valid', placeholder: "Password confirmation" %>
                        <div class="invalid-feedback"></div>
                      <% else %>
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-lg is-invalid', placeholder: "Password confirmation" %>
                        <div class="invalid-feedback">
                          <%= "Password confirmation " + resource.errors.messages[:password_confirmation][0] unless resource.errors.messages[:password_confirmation].empty? %>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg btn-block" %>
                  </div>
                  <%= render 'users/shared/links' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $( '#user_email' ).keyup( () => {
    if ( validateEmail( $( '#user_email' ).val() ) ) {
      $( '#user_email' ).removeClass('is-invalid');
      $( '#user_email' ).addClass('is-valid');
      $( '.js--email-field .invalid-feedback' ).text('')
    } else {
      $( '#user_email' ).removeClass('is-valid');
      $( '#user_email' ).addClass('is-invalid');
      if ( $( '#user_email' ).val() == "" ) {
        $( '.js--email-field .invalid-feedback' ).text("Email can't be blank")
      } else {
        $( '.js--email-field .invalid-feedback' ).text("Email is invalid")
      }
    }
  })

  var validateEmail = email => {
    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/; 
    return re.test(email);
  }

  $( '#user_password' ).keyup( () => {
    if ( $( '#user_password' ).val().length >= 8 ) {
      $( '#user_password' ).removeClass('is-invalid');
      $( '#user_password' ).addClass('is-valid');
      $( '.js--password-field .invalid-feedback' ).text('')
    } else {
      $( '#user_password' ).removeClass('is-valid');
      $( '#user_password' ).addClass('is-invalid');
      if ( $( '#user_password' ).val() == "" ) {
        $( '.js--password-field .invalid-feedback' ).text("Password can't be blank")
      } else {
        $( '.js--password-field .invalid-feedback' ).text("Password is too short (minimum is 8 characters)")
      }
    }
  })

  $( '#user_password_confirmation' ).keyup( () => {
    if ( $( '#user_password_confirmation' ).val() == $( '#user_password' ).val() && $( '#user_password' ).val().length >= 8 ) {
      $( '#user_password_confirmation' ).removeClass('is-invalid');
      $( '#user_password_confirmation' ).addClass('is-valid');
      $( '.js--password-confirmation-field .invalid-feedback' ).text('')
    } else {
      $( '#user_password_confirmation' ).removeClass('is-valid');
      $( '#user_password_confirmation' ).addClass('is-invalid');
      $( '.js--password-confirmation-field .invalid-feedback' ).text("Password confirmation doesn't match Password")
    }
  })
</script>
