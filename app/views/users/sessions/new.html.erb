<div class="user-screen">
  <div id="parallaxBackground" class="mouse-parallax-bg"></div>
  <div class="user-content">
    <div class="container">
      <div class="row height-100vh align-items-center">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-8 col-sm-10 col-xs-12">
              <div class="user-main-block">
                <div class="user-header table-panel">
                  <div class="table-child ver-mid">
                    <%= link_to "<", root_path, class: "back-to-home-button", title: "Go Home" %>
                  </div>
                  <div class="table-child">
                    <h1 class="main-text-logo text-center header-font">Sign In</h1>
                  </div>
                </div>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "user-registration-form"}) do |f| %>
                  <% if alert %>
                    <div class="error-message"><%= alert %></div>
                  <% end %>
                  <div class="form-group js--email-field">
                    <% if alert %>
                      <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg is-invalid', placeholder: "Email" %>
                      <div class="invalid-feedback"></div>
                    <% else %>
                      <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', placeholder: "Email" %>
                      <div class="invalid-feedback"></div>
                    <% end %>
                  </div>
                  <div class="form-group js--password-field">
                    <% if alert %>
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg is-invalid', placeholder: "Password" %>
                      <div class="invalid-feedback"></div>
                    <% else %>
                      <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg', placeholder: "Password" %>
                      <div class="invalid-feedback"></div>
                    <% end %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-group remember-block">
                      <div class="table-panel">
                        <div class="table-child ver-mid">
                          <label class="switch--toggle switch--rectangular switch--theme-green">
                            <%= f.check_box :remember_me, class: 'switch--checkbox' %>
                            <span class="switch--slider"></span>
                          </label>
                        </div>
                        <div class="table-child ver-mid">
                          <span class="remember-text">Keep me signed in</span>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.submit "Sign in", class: "btn btn-outline-light btn-lg btn-block" %>
                  </div>
                  <%= render 'users/shared/links' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $( '#user_email' ).keyup( () => {
    $( '.user-registration-form .error-message' ).text( '' )
    if ( validateEmail( $( '#user_email' ).val() ) ) {
      $( '#user_email' ).removeClass('is-invalid');
      $( '#user_email' ).addClass('is-valid');
      $( '.js--email-field .invalid-feedback' ).text('')
    } else {
      $( '#user_email' ).removeClass('is-valid');
      $( '#user_email' ).addClass('is-invalid');
      if ( $( '#user_email' ).val() == "" ) {
        $( '.js--email-field .invalid-feedback' ).text( "Email can't be blank" )
      } else {
        $( '.js--email-field .invalid-feedback' ).text( 'Email is invalid' )
      }
    }
  })

  var validateEmail = email => {
    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/; 
    return re.test(email);
  }

  $( '#user_password' ).keyup( () => {
    $( '.user-registration-form .error-message' ).text( '' )
    if ( $( '#user_password' ).val() == "" ) {
      $( '#user_password' ).removeClass('is-valid');
      $( '#user_password' ).addClass('is-invalid');
      $( '.js--password-field .invalid-feedback' ).text( "Password can't be blank" )
    } else {
      $( '#user_password' ).removeClass('is-invalid');
      $( '#user_password' ).addClass('is-valid');
      $( '.js--password-field .invalid-feedback' ).text('')
    }
  })
</script>

